nav#blog
  background: #333
.impactory-blog
  .post-container, .post-content
    max-width: 700px
    margin-left: auto
    margin-right: auto
  
  .site-header
    padding-top: 80px

  ul.site-nav
    width: 100%
    position: relative
    z-index: 100
    height: 36px
    margin-top: 0px
    background: white
    border-bottom: 1px solid #eee

  body
    font-family: "Gotham"
    font-size: 18px
    line-height: 1.5
    color: #333
  
  h1,h2,h3,h4,h5,h6
    color: #222
    font-family: 'Gotham'

  h2
    margin-top: 15px
    margin-bottom: 15px
    line-height: 30px
    font-size: 24px
    color: #000 

  p
    line-height: 30px
    font-size: 16px
    margin-bottom: 28px
    margin-top: 0px
    font-family: "Libre Baskerville"

  h1.post-title
    font-size: 44px
    text-transform: none
    font-family: 'Raleway'
    letter-spacing: 0

  .post-date, .blog-description
    font-family: "Gotham"
    font-weight: 400

  .post-header
    padding-bottom: 60px