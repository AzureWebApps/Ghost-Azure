    <footer>
        Theme by <a href="https://github.com/Dennis-Mayk/Practice/">Dennis</a> // Logo by <a href="https://thenounproject.com/mockturtle/">Sergey Demushkin</a>
    </footer>

    {{ghost_footer}}

    <script src="{{asset "js/subbscribe.min.js"}}"></script>
    <script src="{{asset "js/infinitescroll.min.js"}}"></script>
    <script src="{{asset "js/index.js"}}"></script>

</body>

</html>
